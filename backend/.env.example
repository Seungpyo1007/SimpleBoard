# Flask Environment
FLASK_APP=app.py
FLASK_ENV=development # or production
FLASK_DEBUG=1 # or 0 in production

# Application Secret Key (generate a random one for production)
SECRET_KEY=your_very_secret_key_here

# PostgreSQL Database Connection URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:password@localhost:5432/simpleboard_db

# Optional: If you are using a different port for Flask
# FLASK_RUN_PORT=5001
